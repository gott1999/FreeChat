<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="5dp"
    android:paddingEnd="5dp">

    <ImageView
        android:id="@+id/activity_chat_foot_video_call"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_outline_video_call_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/activity_chat_foot_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/activity_chat_foot_emoji_emotions"
        app:layout_constraintStart_toEndOf="@+id/activity_chat_foot_video_call"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/activity_chat_foot_emoji_emotions"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_outline_emoji_emotions_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/activity_chat_foot_add_circle"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/activity_chat_foot_add_circle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_outline_add_circle_outline_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>